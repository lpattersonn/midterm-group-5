<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Quiz!: Home</title>
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <!-- <script type="text/javascript" src="/scripts/clipboard.js"></script> -->
  </head>
  <header>
    <!-- Nav -->
    <section class="nav_logo">
      <h1><a href="http://localhost:8080/">Quiz!</a></h1>
    </section>
    <section>
      <nav>
          <ul class="nav_links">
            <li><a href="http://localhost:8080/createquiz">Create Quiz</a></li>
            <li><a href="http://localhost:8080/myquiz">My Quiz</a></li>
            <li><a href="#">Logout</a></li>
          </ul>
        </nav>
      </section>
    </span>
  </header>
  <body>
   <div class="mainbody">
    <img class="main_image" src="https://media.istockphoto.com/vectors/quiz-in-comic-pop-art-style-quiz-brainy-game-word-vector-illustration-vector-id1186386668?k=20&m=1186386668&s=612x612&w=0&h=tUvqWXoNa2OsJ1YsvZwr3JKOggtzfr_KHuopigindPA=" alt="midterm_group_5">
    <!-- Search Area -->
    <form method="POST" action="/searchresults" class="mainpage_searcharea">
      <div>
        <input type="text" placeholder="Search..." class="main_search" name="search">
      </div>
    <div class="button_arrow">
      <div class="main_button">
        <button class="search_button" type="submit">Search</button>
        <button class="mainpage_quizbutton" type="submit"><a href="/myquiz">My Quiz</a></button>
      </div>
    </form>
      <!-- Animated arrow section -->
        <div class="arrow">
          <span></span>
          <span></span>
          <span></span>
        </div>
        </div>
      <!-- Show public quiz sections -->
      <article class="quiz_questions">
        <div>
        <ul class="quiz_head">
          <li><b>Subject</b></li>
          <li><b>Description</b></li>
        </ul>
        </div>
        <div>
          <ul class="quiz_list">
            <% if (rows) { %>
              <% for (let row of rows) { %>
              <section class="quiz_body">

                <li id="subject"><%= row.subject %></li>
                <li id="description"><%= row.description %></li>
                  <!-- Start Quiz -->
                  <button id="startquiz-button" class="article_button" type="submit"><a href="/quizpage/<%= row.id %>" class="article_button">Start Quiz</a></button>
                  <!-- Share quiz -->
                  <button id="clipboardlink" class="clipboardbuttonOne" type="submit" onclick="alert('Copy the quiz link to share with a friend! Quiz URL:                     http://localhost:8080/quizpage/<%= row.id %>')">Share Quiz</button>

              </section>
            <% } %>
            <% } %>
            </ul>
          </div>

      </article>
  </body>
</html>

